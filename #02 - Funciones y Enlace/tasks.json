// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar TypeScript",
            "type": "shell",
            "command": "tsc",
            "args": ["main.ts"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Ejecutar JavaScript",
            "type": "shell",
            "command": "node",
            "args": ["main.js"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}